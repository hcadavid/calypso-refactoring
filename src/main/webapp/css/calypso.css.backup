/* Table format */
table.sortable
{text-align: center;
font-family: Verdana, Geneva, Arial, Helvetica, sans-serif ;
font-weight: normal;
font-size: 11px;
color: #fff;
width: 280px;
background-color: #666;
border: 0px;
border-collapse: collapse;
border-spacing: 0px;}

table.sortable td
{background-color: #CCC;
color: #000;
padding: 4px;
text-align: left;
border: 1px #fff solid;}


/* Sortable tables */
table.sortable thead
{background-color: #666;
color: #fff;
padding: 4px;
text-align: left;
border-bottom: 2px #fff solid;
font-size: 12px;
 cursor: default;
font-weight: bold;}

/* Sortable tables */
table.sortable.old thead {
    background-color:#eee;
    color:#666666;
    font-weight: bold;
    cursor: default;
}
